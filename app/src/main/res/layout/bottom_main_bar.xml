<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/divider_1" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/develop_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/develop_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"

            android:text="动态"
            android:textColor="@drawable/home_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/home_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="主页"
            android:checked="true"
            android:textColor="@drawable/home_text_color_selector"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/my_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/my_selector"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="个人中心"
            android:textColor="@drawable/home_text_color_selector"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>